---
import StructuredData from './StructuredData.astro';

interface Props {
  problem: string;
  problemDescription: string;
  solution: string;
  solutionDescription: string;
  benefits?: string[];
  className?: string;
}

const { 
  problem, 
  problemDescription, 
  solution, 
  solutionDescription, 
  benefits = [],
  className = '' 
} = Astro.props;
---

<section class={`section-padding bg-gradient-to-br from-cream-200/50 via-white to-cream-200/50 ${className}`}>
  {/* Structured Data para SEO - HowTo */}
  <StructuredData 
    type="HowTo"
    data={{
      name: `${solution}: ${problem}`,
      description: `${solutionDescription}. ${problemDescription}`,
      step: [
        {
          '@type': 'HowToStep',
          name: 'Identificar el problema',
          text: problemDescription,
          position: 1
        },
        {
          '@type': 'HowToStep',
          name: 'Aplicar la solución',
          text: solutionDescription,
          position: 2
        },
        ...(benefits.map((benefit, index) => ({
          '@type': 'HowToStep',
          name: benefit,
          text: benefit,
          position: index + 3
        })))
      ]
    }}
  />
  <div class="container-custom">
    <div class="max-w-6xl mx-auto">
      <!-- Grid balanceado con altura igual -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        <!-- Problema -->
        <div class="flex flex-col h-full">
          <div class="bg-gradient-to-br from-white to-red-50/30 rounded-2xl p-8 border border-red-100/50 shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col h-full">
            <!-- Título de sección -->
            <div class="mb-4">
              <h3 class="font-display text-sm md:text-base font-semibold text-red-600 uppercase tracking-wide mb-2">
                El Problema
              </h3>
            </div>
            <!-- Icono y título -->
            <div class="flex items-start gap-4 mb-6">
              <div class="w-14 h-14 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="font-display text-xl md:text-2xl font-bold text-secondary-950 mb-2 leading-tight">
                  {problem}
                </h2>
              </div>
            </div>
            <!-- Descripción -->
            <p class="text-secondary-700 leading-relaxed text-base font-medium flex-grow">
              {problemDescription}
            </p>
          </div>
        </div>

        <!-- Solución -->
        <div class="flex flex-col h-full">
          <div class="bg-gradient-to-br from-white to-primary-50/30 rounded-2xl p-8 border border-primary-100/50 shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col h-full">
            <!-- Título de sección -->
            <div class="mb-4">
              <h3 class="font-display text-sm md:text-base font-semibold text-primary-600 uppercase tracking-wide mb-2">
                La Solución
              </h3>
            </div>
            <!-- Icono y título -->
            <div class="flex items-start gap-4 mb-6">
              <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="font-display text-xl md:text-2xl font-bold text-secondary-950 mb-2 leading-tight">
                  {solution}
                </h2>
              </div>
            </div>
            <!-- Descripción -->
            <p class="text-secondary-700 leading-relaxed text-base font-medium mb-6 flex-grow">
              {solutionDescription}
            </p>
            <!-- Benefits -->
            {benefits.length > 0 && (
              <div class="pt-4 border-t border-primary-100/50">
                <ul class="space-y-3">
                  {benefits.map((benefit) => (
                    <li class="flex items-start gap-3">
                      <div class="w-5 h-5 bg-primary-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                        <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                      </div>
                      <span class="text-secondary-700 font-medium text-sm md:text-base leading-relaxed">{benefit}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

