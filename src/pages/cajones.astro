---
import BaseLayout from '../layouts/BaseLayout.astro';
import WhatsAppButton from '../components/WhatsAppButton';
import { CheckCircle, ArrowRight, Box } from 'lucide-react';
---

<BaseLayout title="Cajones" description="Cajones de alta calidad con sistemas de cierre suave y organización optimizada.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white section-padding relative overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="/hero.png" 
        alt="Cajones premium"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-secondary-800/85 via-secondary-700/80 to-secondary-800/85"></div>
    </div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-display text-5xl md:text-7xl font-black mb-6">
          Cajones<br />
          <span class="gradient-text bg-gradient-to-r from-primary-300 to-white">Premium</span>
        </h1>
        <p class="text-xl md:text-2xl text-primary-100 leading-relaxed">
          Sistemas de cajones de alta calidad con cierre suave y organización optimizada.
        </p>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding bg-dark-100">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1 bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl overflow-hidden relative h-full min-h-[400px]">
          <img 
            src="/Gemini_Generated_Image_jeq0kqjeq0kqjeq0.png" 
            alt="Cajones premium con sistema de cierre suave"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent flex items-end p-8">
            <p class="text-white text-lg font-semibold">
              Calidad y suavidad en cada movimiento. Experiencia premium en cada uso.
            </p>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <div class="flex items-center gap-3 mb-6">
            <Box class="w-8 h-8 text-accent-500" />
            <h2 class="font-display text-4xl font-bold">Características</h2>
          </div>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Sistema de cierre suave (soft-close)</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Herrajes de alta calidad y durabilidad</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Capacidad de carga optimizada</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Organizadores internos personalizables</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Diseño a medida según tus necesidades</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-dark-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center bg-white rounded-2xl p-12 shadow-xl border border-dark-300">
        <h2 class="font-display text-4xl font-bold mb-4">¿Quieres mejorar tus cajones?</h2>
        <p class="text-xl text-dark-600 mb-8">
          Contáctanos para cotizar sistemas de cajones premium para tu cocina.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#cotizar" class="btn-primary text-lg px-8 py-4 flex items-center justify-center gap-2">
            Solicitar cotización
            <ArrowRight class="w-5 h-5" />
          </a>
          <WhatsAppButton variant="inline" className="text-lg px-8 py-4" />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

