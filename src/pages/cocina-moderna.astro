---
import BaseLayout from '../layouts/BaseLayout.astro';
import WhatsAppButton from '../components/WhatsAppButton';
import Team from '../components/Team';
import { CheckCircle, ArrowRight } from 'lucide-react';
---

<BaseLayout title="Cocina Moderna" description="Diseños de cocina moderna con estilo vanguardista, funcionalidad y practicidad.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white section-padding relative overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="/hero.png" 
        alt="Cocina moderna minimalista"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-secondary-800/85 via-secondary-700/80 to-secondary-800/85"></div>
    </div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-6 flex justify-center">
          <div class="relative inline-block p-3 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20">
            <img 
              src="/logo.png" 
              alt="Mueblería Casa Blanca" 
              class="h-16 md:h-24 w-auto drop-shadow-[0_4px_16px_rgba(0,0,0,0.6)] filter brightness-120 contrast-125 hover:brightness-130 transition-all duration-300"
              style="filter: drop-shadow(0 4px 16px rgba(0,0,0,0.6)) drop-shadow(0 0 12px rgba(255,255,255,0.4)) brightness(1.2) contrast(1.25);"
            />
          </div>
        </div>
        <h1 class="font-display text-5xl md:text-7xl font-black mb-6">
          Cocina<br />
          <span class="gradient-text bg-gradient-to-r from-accent-400 via-accent-300 to-white">Moderna</span>
        </h1>
        <p class="text-xl md:text-2xl text-white leading-relaxed font-medium drop-shadow-lg">
          Estilo vanguardista con funcionalidad y practicidad. Diseños que reflejan las últimas tendencias.
        </p>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding bg-cream-300">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1 bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl overflow-hidden relative h-full min-h-[400px]">
          <img 
            src="/cocinas/IMG_3207.JPG" 
            alt="Cocina moderna con diseño minimalista"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent flex items-end p-8">
            <p class="text-white text-lg font-semibold">
              Espacios que combinan innovación, estilo y máxima funcionalidad.
            </p>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="font-display text-4xl font-bold mb-6 text-secondary-950">Características de Cocinas Modernas</h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-secondary-700">Diseño vanguardista con líneas limpias y minimalistas</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-secondary-700">Materiales contemporáneos como melamina, lacados y acero inoxidable</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-secondary-700">Sistemas de almacenamiento inteligente y organizadores integrados</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-secondary-700">Iluminación LED integrada y tecnología de vanguardia</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-secondary-700">Optimización máxima del espacio con soluciones innovadoras</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-cream-300">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center bg-white rounded-2xl p-12 shadow-xl border border-secondary-300">
        <h2 class="font-display text-4xl font-bold mb-4">¿Te gusta este estilo?</h2>
        <p class="text-xl text-secondary-600 mb-8">
          Contáctanos para cotizar tu cocina moderna personalizada.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#cotizar" class="btn-primary text-lg px-8 py-4 flex items-center justify-center gap-2">
            Solicitar cotización
            <ArrowRight class="w-5 h-5" />
          </a>
          <WhatsAppButton variant="inline" className="text-lg px-8 py-4" />
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <Team client:load />
</BaseLayout>

