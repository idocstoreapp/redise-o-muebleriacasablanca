---
import BaseLayout from '../layouts/BaseLayout.astro';
import WhatsAppButton from '../components/WhatsAppButton';
import Team from '../components/Team';
import { CheckCircle, ArrowRight, Lightbulb } from 'lucide-react';
---

<BaseLayout title="Iluminación de Cocinas" description="Soluciones de iluminación profesional para realzar el diseño de tu cocina.">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white section-padding relative overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="/hero.png" 
        alt="Iluminación de cocinas"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-secondary-800/85 via-secondary-700/80 to-secondary-800/85"></div>
    </div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-display text-5xl md:text-7xl font-black mb-6">
          Iluminación de<br />
          <span class="gradient-text bg-gradient-to-r from-primary-300 to-white">Cocinas</span>
        </h1>
        <p class="text-xl md:text-2xl text-primary-100 leading-relaxed">
          Ilumina tu cocina con estilo. Soluciones profesionales que realzan cada detalle.
        </p>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding bg-dark-100">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center gap-3 mb-6">
            <Lightbulb class="w-8 h-8 text-accent-500" />
            <h2 class="font-display text-4xl font-bold">Características</h2>
          </div>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Iluminación LED de alta eficiencia</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Diseño integrado en muebles y alacenas</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Control de intensidad y temperatura de color</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Iluminación funcional y decorativa</span>
            </li>
            <li class="flex items-start gap-3">
              <CheckCircle class="w-6 h-6 text-accent-500 flex-shrink-0 mt-1" />
              <span class="text-lg text-dark-600">Instalación profesional y garantizada</span>
            </li>
          </ul>
        </div>
        <div class="bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl overflow-hidden relative h-full min-h-[400px]">
          <img 
            src="/Gemini_Generated_Image_mljzfkmljzfkmljz.png" 
            alt="Iluminación LED profesional para cocinas"
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent flex items-end p-8">
            <p class="text-white text-lg font-semibold">
              La luz correcta transforma tu cocina. Diseñamos la iluminación perfecta para ti.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-dark-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center bg-white rounded-2xl p-12 shadow-xl border border-dark-300">
        <h2 class="font-display text-4xl font-bold mb-4">¿Quieres mejorar la iluminación?</h2>
        <p class="text-xl text-dark-600 mb-8">
          Contáctanos para diseñar la solución de iluminación perfecta para tu cocina.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#cotizar" class="btn-primary text-lg px-8 py-4 flex items-center justify-center gap-2">
            Solicitar cotización
            <ArrowRight class="w-5 h-5" />
          </a>
          <WhatsAppButton variant="inline" className="text-lg px-8 py-4" />
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <Team client:load />
</BaseLayout>

