---
import BaseLayout from '../layouts/BaseLayout.astro';
import StructuredData from '../components/StructuredData.astro';
import ProblemSolution from '../components/ProblemSolution.astro';
import GoogleReviewsCarousel from '../components/GoogleReviewsCarousel';
import WhatsAppButton from '../components/WhatsAppButton';
import ContactForm from '../components/ContactForm';
import TestimonialsCarousel from '../components/TestimonialsCarousel';
import TrustBanner from '../components/TrustBanner';
import FAQ from '../components/FAQ';
import HowItWorks from '../components/HowItWorks';
import ProjectsGallery from '../components/ProjectsGallery';
import BenefitsCarousel from '../components/BenefitsCarousel';
import CatalogoMueblesEmbebido from '../components/CatalogoMueblesEmbebido';
import { ArrowRight, CheckCircle, Star, Clock, Award, Sofa, Palette, Wrench, Shield } from 'lucide-react';

const site = 'https://muebleriacasablanca.cl';
const currentUrl = `${site}/muebles-a-medida`;
---

<BaseLayout 
  title="Muebles a Medida" 
  description="Muebles personalizados que se adaptan a tu espacio. Diseño exclusivo, funcionalidad y calidad premium. Cotiza tus muebles ideales."
  image={`${site}/muebles/mueble1.png`}
  url={currentUrl}
>
  {/* Structured Data - Service */}
  <StructuredData 
    type="Service"
    data={{
      name: 'Muebles a Medida',
      description: 'Muebles personalizados que se adaptan a tu espacio. Diseño exclusivo, funcionalidad y calidad premium.',
      provider: {
        '@type': 'LocalBusiness',
        name: 'Mueblería Casa Blanca',
        url: site
      },
      areaServed: {
        '@type': 'Country',
        name: 'Chile'
      },
      serviceType: 'Diseño y Fabricación de Muebles',
      offers: {
        '@type': 'Offer',
        priceCurrency: 'CLP',
        availability: 'https://schema.org/InStock'
      }
    }}
  />

  {/* Breadcrumbs */}
  <StructuredData 
    type="BreadcrumbList"
    data={{
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Inicio',
          item: site
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Muebles a Medida',
          item: currentUrl
        }
      ]
    }}
  />
  <!-- Hero Section -->
  <section class="relative min-h-[500px] md:min-h-[650px] flex items-center justify-center bg-gradient-to-br from-secondary-800 via-secondary-700 to-secondary-800 text-white overflow-visible md:overflow-hidden pt-12 md:pt-16 pb-16 md:pb-20 hero-responsive-padding hero-muebles">
    <div class="absolute inset-0">
      <img 
        src="/Gemini_Generated_Image_taxf2gtaxf2gtaxf.png" 
        alt="Muebles a medida elegantes"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <!-- Overlay suave para legibilidad -->
      <div class="absolute inset-0 bg-gradient-to-br from-secondary-900/60 via-secondary-800/50 to-secondary-900/60 backdrop-blur-[1px]"></div>
    </div>
    
    <!-- Google Reviews Carousel -->
    <GoogleReviewsCarousel client:load variant="hero" />
    
    <div class="container-custom relative z-10 text-center">
      <div class="max-w-4xl mx-auto px-4">
        <!-- Logo -->
        <div class="mb-6 md:mb-10 flex justify-center mt-4 md:mt-8">
          <div class="relative inline-block p-1 md:p-2 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20">
            <img 
              src="/logo-blaco.png" 
              alt="Mueblería Casa Blanca" 
              class="h-20 md:h-32 w-auto drop-shadow-[0_4px_16px_rgba(0,0,0,0.6)] filter brightness-120 contrast-125"
              style="filter: drop-shadow(0 4px 16px rgba(0,0,0,0.6)) drop-shadow(0 0 12px rgba(255,255,255,0.4)) brightness(1.2) contrast(1.25);"
              onerror="this.src='/logo-blanco.png'; this.onerror=null;"
            />
          </div>
        </div>
        
        <!-- H1 - Texto más corto y limpio -->
        <h1 class="font-sans text-3xl md:text-5xl lg:text-6xl font-bold mb-6 md:mb-8 leading-[1.1] tracking-tight drop-shadow-2xl text-white">
          Muebles a Medida
        </h1>
        
        <!-- Subtítulo - Versión más corta -->
        <p class="font-sans text-base md:text-lg lg:text-xl text-white/95 mb-8 md:mb-10 leading-relaxed font-normal drop-shadow-lg max-w-2xl mx-auto">
          Diseño funcional hecho para tu espacio.
        </p>
        
        <!-- Microcopy - Texto simplificado -->
        <div class="flex flex-wrap items-center justify-center gap-2 md:gap-3 mb-10 md:mb-12 text-white/90 font-sans">
          <span class="text-sm md:text-base font-medium">+200 proyectos completados</span>
          <span class="text-white/60 text-sm md:text-base">·</span>
          <span class="text-sm md:text-base font-medium">Diseño personalizado</span>
        </div>
        
        <!-- Botones mejorados -->
        <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center items-center pb-4 buttons-responsive-margin">
          <a 
            href="#cotizar" 
            class="bg-primary-500 hover:bg-primary-600 text-white font-sans font-semibold text-sm md:text-base px-8 md:px-10 py-3.5 md:py-4 rounded-xl uppercase tracking-wide transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center justify-center gap-2 min-w-[180px] sm:min-w-[200px] group"
            aria-label="Cotizar mis muebles"
          >
            Cotizar mis muebles
            <ArrowRight class="w-4 h-4 md:w-5 md:h-5 group-hover:translate-x-1 transition-transform" />
          </a>
          <WhatsAppButton variant="inline" className="bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white font-sans font-semibold text-sm md:text-base px-8 md:px-10 py-3.5 md:py-4 rounded-xl uppercase tracking-wide transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 min-w-[180px] sm:min-w-[200px]" />
        </div>
      </div>
    </div>
  </section>

  <!-- Google Reviews Carousel - Mobile: Superpuesto al hero -->
  <div class="md:hidden w-full px-4 -mt-20 mb-8 relative z-30">
    <div class="bg-white rounded-2xl shadow-2xl border border-secondary-200 p-4 max-w-md mx-auto">
      <GoogleReviewsCarousel client:load variant="mobile" />
    </div>
  </div>

  <!-- Trust Banner -->
  <TrustBanner client:load />

  <!-- Benefits Section -->
  <section class="section-padding bg-cream-300 relative">
    <div class="absolute inset-0 bg-gradient-to-b from-cream-300 via-cream-200/50 to-cream-300"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-secondary-950">
            Por qué elegir nuestros muebles
          </h2>
          <p class="text-xl text-secondary-800 max-w-2xl mx-auto font-medium">
            Piezas únicas diseñadas específicamente para tu espacio
          </p>
        </div>

        <BenefitsCarousel 
        client:load
        benefits={[
          {
            iconName: 'Sofa',
            title: 'Diseño Exclusivo',
            description: 'Cada mueble diseñado desde cero para tu espacio y necesidades.'
          },
          {
            iconName: 'Palette',
            title: 'Adaptación Perfecta',
            description: 'Se adaptan perfectamente a cualquier espacio, por irregular que sea.'
          },
          {
            iconName: 'Award',
            title: 'Calidad Artesanal',
            description: 'Fabricación artesanal con atención a cada detalle y acabado.'
          }
        ]}
      />
      </div>
    </div>
  </section>

  <!-- Projects Gallery -->
  <ProjectsGallery 
    client:load
    projects={[
      { id: 1, image: '/muebles/IMG_18791.jpg', alt: 'Mueble a medida 1' },
      { id: 2, image: '/muebles/IMG_5831.JPG', alt: 'Mueble a medida 2' },
      { id: 3, image: '/muebles/IMG_5842.JPG', alt: 'Mueble a medida 3' },
      { id: 4, image: '/muebles/mueble1-1.png', alt: 'Mueble a medida 4' },
      { id: 5, image: '/muebles/mueble1-2.png', alt: 'Mueble a medida 5' },
      { id: 6, image: '/muebles/muebles.mp4', alt: 'Mueble a medida - Video' },
      { id: 7, image: '/muebles/Gemini_Generated_Image_33kk6f33kk6f33kk.png', alt: 'Mueble a medida 6' },
      { id: 8, image: '/muebles/Gemini_Generated_Image_8l6to78l6to78l6t.png', alt: 'Mueble a medida 7' },
    ]}
    title="Nuestros proyectos de muebles"
    serviceType="mueble"
  />

  <!-- Problema y Solución -->
  <ProblemSolution
    problem="Muebles que no encajan en tu espacio"
    problemDescription="Los muebles estándar rara vez se adaptan perfectamente a espacios irregulares, esquinas o dimensiones específicas. Esto resulta en espacios desperdiciados, diseños que no fluyen y soluciones que no cumplen con tus expectativas funcionales y estéticas."
    solution="Muebles diseñados específicamente para tu espacio"
    solutionDescription="Fabricamos muebles que se integran perfectamente con tu arquitectura, aprovechando cada rincón y adaptándose a tus necesidades específicas. Cada pieza es única, diseñada para maximizar funcionalidad y complementar tu estilo."
    benefits={[
      "Adaptación perfecta a espacios irregulares y dimensiones específicas",
      "Diseño multifuncional que optimiza cada área disponible",
      "Calidad artesanal con materiales seleccionados para durabilidad",
      "Soluciones únicas que reflejan tu personalidad y estilo"
    ]}
  />

  <!-- Cotizador de Muebles -->
  <section class="bg-cream-300 section-padding" style="overflow-x: hidden; max-width: 100vw; position: relative;">
    <div class="container-custom max-w-7xl mx-auto px-4 md:px-8" style="overflow-x: hidden; max-width: 100%; position: relative;">
      <div class="text-center mb-6 md:mb-8">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-4 text-secondary-950">
          Diseña tu Mueble Ideal
        </h2>
        <p class="text-base md:text-lg text-secondary-700 max-w-2xl mx-auto font-medium">
          Explora nuestro catálogo interactivo y crea el mueble de tus sueños. Personaliza materiales, dimensiones y acabados.
        </p>
      </div>
      <div class="w-full overflow-hidden" style="max-width: 100%; position: relative;">
        <CatalogoMueblesEmbebido 
          client:only="react"
          urlCotizador="https://cotizador-app-two.vercel.app/muebles-publico"
          altura="900px"
          className="w-full"
        />
      </div>
    </div>
  </section>

  <!-- Types of Furniture -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-secondary-950">
          Tipos de muebles
        </h2>
        <p class="text-xl text-secondary-800 max-w-2xl mx-auto font-medium">
          Soluciones para cada espacio de tu hogar
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-cream-100 p-6 rounded-2xl">
          <h3 class="font-display text-xl font-bold mb-3 text-secondary-950">Muebles de Sala</h3>
          <ul class="space-y-2">
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Estanterías y libreros</span>
            </li>
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Muebles para TV</span>
            </li>
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Mesas de centro</span>
            </li>
          </ul>
        </div>

        <div class="bg-cream-100 p-6 rounded-2xl">
          <h3 class="font-display text-xl font-bold mb-3 text-secondary-950">Muebles de Dormitorio</h3>
          <ul class="space-y-2">
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Camas y cabeceras</span>
            </li>
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Muebles auxiliares</span>
            </li>
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Mesas de noche</span>
            </li>
          </ul>
        </div>

        <div class="bg-cream-100 p-6 rounded-2xl">
          <h3 class="font-display text-xl font-bold mb-3 text-secondary-950">Muebles Comerciales</h3>
          <ul class="space-y-2">
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Mostradores y vitrinas</span>
            </li>
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Muebles de oficina</span>
            </li>
            <li class="flex items-center gap-2">
              <CheckCircle class="w-5 h-5 text-primary-500" />
              <span class="text-secondary-800 font-medium">Espacios comerciales</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section - Soluciones Integrales para Muebles -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-8 md:mb-12">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-3 md:mb-4 text-secondary-950">
          Soluciones integrales para muebles a medida
        </h2>
        <p class="text-base md:text-lg text-secondary-700 max-w-2xl mx-auto font-medium">
          Cada detalle cuenta. Soluciones que se adaptan perfectamente a tu espacio.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <!-- Diseño a Medida -->
        <div class="group relative rounded-2xl overflow-hidden shadow-lg card-hover">
          <div class="aspect-[4/3] relative overflow-hidden bg-secondary-200">
            <img
              src="/muebles/mueble1-1.png"
              alt="Diseño a medida de muebles"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-secondary-900/80 via-secondary-900/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
              <h3 class="font-display text-xl md:text-2xl font-bold text-white mb-2 drop-shadow-lg">
                Diseño a Medida
              </h3>
              <p class="text-white/95 text-sm md:text-base font-medium drop-shadow-md mb-2">
                Adaptación perfecta a tu espacio
              </p>
              <ul class="text-white/90 text-xs md:text-sm space-y-1 font-medium">
                <li>• Se adapta a espacios irregulares</li>
                <li>• Diseño desde cero para tu lugar</li>
                <li>• Optimización de cada centímetro</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Acabados Premium -->
        <div class="group relative rounded-2xl overflow-hidden shadow-lg card-hover">
          <div class="aspect-[4/3] relative overflow-hidden bg-secondary-200">
            <img
              src="/muebles/mueble1-2.png"
              alt="Acabados premium para muebles"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-secondary-900/80 via-secondary-900/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
              <h3 class="font-display text-xl md:text-2xl font-bold text-white mb-2 drop-shadow-lg">
                Acabados Premium
              </h3>
              <p class="text-white/95 text-sm md:text-base font-medium drop-shadow-md mb-2">
                Materiales de primera calidad
              </p>
              <ul class="text-white/90 text-xs md:text-sm space-y-1 font-medium">
                <li>• Múltiples opciones de laminado</li>
                <li>• Terminaciones de lujo disponibles</li>
                <li>• Resistencia y durabilidad garantizada</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Funcionalidad Versátil -->
        <div class="group relative rounded-2xl overflow-hidden shadow-lg card-hover">
          <div class="aspect-[4/3] relative overflow-hidden bg-secondary-200">
            <img
              src="/muebles/Gemini_Generated_Image_33kk6f33kk6f33kk.png"
              alt="Funcionalidad versátil en muebles"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-secondary-900/80 via-secondary-900/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
              <h3 class="font-display text-xl md:text-2xl font-bold text-white mb-2 drop-shadow-lg">
                Funcionalidad Versátil
              </h3>
              <p class="text-white/95 text-sm md:text-base font-medium drop-shadow-md mb-2">
                Múltiples usos en un solo mueble
              </p>
              <ul class="text-white/90 text-xs md:text-sm space-y-1 font-medium">
                <li>• Almacenamiento integrado</li>
                <li>• Espacios para TV y electrónicos</li>
                <li>• Diseño multifuncional</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Espacios Comerciales -->
        <div class="group relative rounded-2xl overflow-hidden shadow-lg card-hover">
          <div class="aspect-[4/3] relative overflow-hidden bg-secondary-200">
            <img
              src="/muebles/Gemini_Generated_Image_8l6to78l6to78l6t.png"
              alt="Muebles para espacios comerciales"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-secondary-900/80 via-secondary-900/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6">
              <h3 class="font-display text-xl md:text-2xl font-bold text-white mb-2 drop-shadow-lg">
                Espacios Comerciales
              </h3>
              <p class="text-white/95 text-sm md:text-base font-medium drop-shadow-md mb-2">
                Mostradores, vitrinas y exhibidores
              </p>
              <ul class="text-white/90 text-xs md:text-sm space-y-1 font-medium">
                <li>• Mostradores de recepción</li>
                <li>• Vitrinas para productos</li>
                <li>• Muebles exhibidores profesionales</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <HowItWorks client:load />

  <!-- Instagram Feed Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-8 md:mb-12">
        <h2 class="font-display text-2xl md:text-4xl font-bold mb-3 md:mb-4 text-secondary-950">
          Síguenos en Instagram
        </h2>
        <p class="text-base md:text-lg text-secondary-700 max-w-2xl mx-auto font-medium">
          Descubre nuestros últimos proyectos y trabajos realizados
        </p>
      </div>
      <div class="w-full max-w-7xl mx-auto px-4">
        <div class="elfsight-app-efe488d9-d05a-4543-8503-b921962d68e2" data-elfsight-app-lazy></div>
      </div>
    </div>
    <script src="https://elfsightcdn.com/platform.js" async></script>
  </section>

  <!-- Testimonials -->
  <section class="section-padding bg-cream-300">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-4 text-secondary-950">
          Lo que dicen nuestros clientes
        </h2>
        <p class="text-xl text-secondary-800 max-w-2xl mx-auto font-medium">
          Experiencias reales de clientes satisfechos
        </p>
      </div>
      <TestimonialsCarousel client:load />
    </div>
  </section>

  <!-- CTA Section -->
  <section id="cotizar" class="section-padding bg-gradient-to-br from-secondary-800 to-secondary-700 text-white relative overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="/Gemini_Generated_Image_taxf2gtaxf2gtaxf.png" 
        alt="Muebles a medida"
        class="w-full h-full object-cover"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-secondary-800/85 via-secondary-700/80 to-secondary-800/85"></div>
    </div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
          ¿Listo para tus muebles ideales?
        </h2>
        <p class="text-xl text-primary-100 mb-12">
          Completa el formulario y te contactaremos para cotizar tus muebles personalizados.
        </p>
        
        <div class="bg-white rounded-2xl p-8 md:p-12 text-secondary-900 shadow-2xl">
          <ContactForm client:load />
        </div>

        <!-- Google Maps -->
        <div class="mt-12">
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-secondary-200">
            <div class="w-full h-96 md:h-[500px]">
              <iframe
                src="https://www.google.com/maps?q=Santa+Elena+803,+Santiago,+Chile&output=embed"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Ubicación Mueblería Casa Blanca - Santa Elena 803, Santiago"
              ></iframe>
            </div>
            <div class="p-6 bg-cream-100 border-t border-secondary-200">
              <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div>
                  <h3 class="font-display text-xl font-bold text-secondary-950 mb-2">Nuestra ubicación</h3>
                  <p class="text-secondary-700 font-medium">Santa Elena 803, Santiago, Chile</p>
                </div>
                <a
                  href="https://www.google.com/maps/search/?api=1&query=Santa+Elena+803,Santiago,Chile"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-primary inline-flex items-center gap-2"
                >
                  <span>Abrir en Google Maps</span>
                  <ArrowRight class="w-5 h-5" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ client:load />
</BaseLayout>

